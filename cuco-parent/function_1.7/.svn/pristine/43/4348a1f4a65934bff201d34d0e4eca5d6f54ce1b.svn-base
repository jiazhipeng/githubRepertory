.bar {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    background: #191919;
    color: #fff;
}

.bar i {
    flex: 1;
}

.list-block ul {
    background: #efeff4;
}

.date {
    margin-top: 1rem;
    background: #fff;
    padding-bottom: 2rem;
}

.date .date-title {
    font-size: 1rem;
    color: #86bfbe;
    text-align: center;
    margin: 1.5rem;
}


/*.first-date .date-title {
    margin-top: 0;
}*/

.date-r {
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 2.5rem;
}

.date-r span {
    flex: 1;
    text-align: center;
    font-size: .7rem;
    position: relative;
}

.date-r span.disabled {
    color: #dcdcdb;
}

.date-r span i {
    font-size: .5rem;
    position: absolute;
    top: -.3rem;
    left: .4rem;
    color: #86bfbe;
}