.pagebooking{background: #020101 url("../images/bookingbg.jpg") no-repeat; background-size: 100%; padding-top: 70%;}
.pagebooking ul,.pagebooking .button{width: 70%; margin: auto; font-size: 1.5rem;}
.pagebooking li{position: relative; border-bottom: 1px solid #a09f9f; color: #fff; height: 42px; line-height: 42px;}
.pagebooking p{overflow: hidden; height: 40px;}
.pagebooking .name{width:60px; display: block; float: left; text-align:justify;text-justify:distribute-all-lines;}
.pagebooking .name:after{display:inline-block;content:'';width:100%;height:0; line-height: 0;}
.pagebooking input{width: 100%; height: 100%; font-size: 1.5rem; padding-left: 76px; box-sizing: border-box; background: none; position: absolute; left: 0; top: 0; color: #fff;}
.pagebooking li.err{border-bottom: 0;}
.pagebooking .button{height: 40px; line-height: 40px; background: #3e3a39; text-align: center; display: block; color: #fff;}
