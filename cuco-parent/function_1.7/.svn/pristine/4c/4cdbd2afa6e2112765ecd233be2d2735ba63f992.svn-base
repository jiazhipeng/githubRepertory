}
.confirm-foot a.sure{
    width: 49%;
    height: 100%;
    border-right: 1px solid #949494;
}
.confirm-foot a.cancel{
    width: 49%;
    height: 100%;
}

.confirm-body {}

.confirm-body p {
    text-align: center;
    color: #3c3c3c;
    padding: 0 10px;
    line-height: 1.5rem;
}