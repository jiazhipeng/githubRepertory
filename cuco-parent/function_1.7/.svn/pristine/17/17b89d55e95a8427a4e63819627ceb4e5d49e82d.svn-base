    <title>修改资料</title>
    <link href="../../css/user.css" rel="stylesheet" type="text/css" />
    <link href="../../css/css.css" rel="stylesheet" type="text/css" />
    <style>
        .update-info {
            font-size: 1.6rem;
        }
        .update-info li{
            background: #fff;
            height: 42px;
            line-height: 42px;
            padding: 0 3%;
            font-size: 1.6rem;
            position: relative;

        }
        .ipt-text {
            width: 100%;
            height: 100%;
            padding: 0 6px;
            background: none;
            -webkit-appearance: none;
            color: #666;
        }
        .close {
            width: 20px;
            height: 20px;
            background: url("../../images/clear_search.png") no-repeat;
            display: inline-block;
            vertical-align: middle;
            background-size: 100%;
            position: absolute;
            right: 10px;
            top: 12px;
        }
        .update-info .city {
            /*padding: 10px;*/
            background: #fff;
        }
        .update-info .city li{
            border-bottom: 1px #ccc solid;
            margin: 0 3%;
        }
        .selected-icon {
            width: 20px;
            height: 18px;
            background: url("../../images/right_sel.png") no-repeat;
            display: inline-block;
            vertical-align: middle;
            background-size: 80%;
            position: absolute;
            right: 10px;
            top: 15px;
        }
        .hide-i {
            display: none;
        }
    </style>
</head>
