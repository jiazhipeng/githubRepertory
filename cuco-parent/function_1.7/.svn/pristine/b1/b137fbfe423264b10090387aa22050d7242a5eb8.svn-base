@charset "utf-8";
.fixBottom {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
}




/*故障维修*/
.fault-page{
    background: #fff;
}
.fault-page li{
    background-size: 8px;
	display: block;
	overflow: hidden;
    border-bottom: 1px solid #ccc;
    position: relative;
}
.fault-page li a {
    display: block;
	background: url(../../images/arrow_right_grey.png) no-repeat right center;
	padding-right: 14px;
    margin-right: 10px;
    overflow: hidden;
}
.fault-page .info-name {
    position: absolute;
    left: 8px;
    top: 0;
    width: 80px;
	color: #333;
    line-height: 40px;
}
.fault-page .info-val {
    display: block;
    width: 100%;
    box-sizing: border-box;
    padding-left: 90px; 
	color: #999;
    padding: 0 10px 0 90px;
    min-height: 40px;
    line-height: 40px;
}
.fault-page .input{
    width: 100%;
    height: 100%;
    background: none;
}
.textarea{
    width: 100%; 
    height: 150px; 
    resize: none; 
    box-shadow: none; 
    -webkit-appearance: none; 
    box-sizing: border-box; 
    border: 1px solid #ccc; 
    padding: 15px; 
    margin: 0;
    font-size: 1.6rem; 
    border: 1px solid #ccc;
    margin-top: 10px;
}

.radio-block {
	display: block;
	overflow: hidden;
}
.radio-block em {
	float: left;
	white-space: nowrap;
	overflow: hidden;
	margin-right: 15px;
}
.fault-page li{
 width: 100%;
}
.fault-type{
    margin-top: 10px;
}
.info_type{
    width:50% ;
    position: absolute;
    left: 8px;
    top: 0;
	color: #333;
    line-height: 40px;
}
.info_time{
    width:100%;
    display: block;
    box-sizing: border-box;
    padding-left: 50%; 
	color: #999;
    min-height: 40px;
    line-height: 40px;
}
.fault-page .info-name-time{
    width: 118px;
}
.fault-page .info-name-val{
    padding-left:120px;
}
